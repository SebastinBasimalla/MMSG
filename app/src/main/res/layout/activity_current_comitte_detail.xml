<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.sympo.mmsg.NewDetailsActivity">


    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/newgreen"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back_white_36dp"
            android:paddingLeft="15dp"

            />


        <TextView
            android:id="@+id/detailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Current Comittee"
            android:textColor="@android:color/white"
            android:textSize="22sp"

            />


    </RelativeLayout>



    <View
        android:id="@+id/aboveNewDetailImage"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/topView"
        />

    <ImageView
        android:id="@+id/newdetailImage"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_below="@+id/aboveNewDetailImage"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/black_background"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/belowNewDetailImage"
        android:layout_below="@+id/newdetailImage"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/belowNewDetailImage"
        android:background="@drawable/detail_below_text_border"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/newdetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/newDetailLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghanerao"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>


    </LinearLayout>

</LinearLayout>
